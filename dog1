local ScreenGui = Instance.new("ScreenGui")
local pp = Instance.new("Frame")
local Frame = Instance.new("Frame")
local TextLabel = Instance.new("TextLabel")

--Properties:

ScreenGui.Parent = game.CoreGui

pp.Name = "pp"
pp.Parent = ScreenGui
pp.BackgroundColor3 = Color3.fromRGB(34, 255, 9)
pp.Position = UDim2.new(0.746438742, 0, 0.909930825, 0)
pp.Size = UDim2.new(0, 148, 0, 23)
pp.Active = true
pp.Draggable = true


Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(252, 0, 6)
Frame.Position = UDim2.new(0.745999992, 0, 0.910000026, 0)
Frame.Size = UDim2.new(0, 148, 0, 23)
Frame.ZIndex = 0

TextLabel.Parent = ScreenGui
TextLabel.BackgroundColor3 = Color3.fromRGB(202, 59, 231)
TextLabel.BackgroundTransparency = 1.000
TextLabel.Position = UDim2.new(0.707977235, 0, 0.824480355, 0)
TextLabel.Size = UDim2.new(0, 200, 0, 50)
TextLabel.Font = Enum.Font.SourceSansBold
TextLabel.Text = "Current NPC HP"
TextLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
TextLabel.TextSize = 18.000

-- Scripts:

local function XCHYGB_fake_script() -- pp.LocalScript 
	local script = Instance.new('LocalScript', pp)

	local dick = game:GetService("Players").LocalPlayer
	local Character = dick.Character or dick.CharacterAdded:Wait()
	local Humanoid = Character:WaitForChild("Humanoid")
	game:GetService("Players").LocalPlayer.Character.Humanoid:GetPropertyChangedSignal("Health"):Connect(function()
		local Health = game.Players.LocalPlayer.Character.Humanoid.Health
		local MaxHealth = game.Players.LocalPlayer.Character.Humanoid.MaxHealth
		script.Parent:TweenSize(UDim2.new(0, (Health/MaxHealth)*148,0, 23))
	end)
end
coroutine.wrap(XCHYGB_fake_script)()
